<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

           <ImageButton
               android:id="@+id/b1"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_alignParentLeft="true"
               android:background="@drawable/radius"
               android:layout_width="50dp"
               android:src="@drawable/ic_arrow_back_black_24dp"
               android:layout_height="50dp" />
           <ImageButton
               android:layout_alignParentRight="true"
               android:layout_marginTop="10dp"
               android:background="@drawable/radius"
               android:layout_marginRight="20dp"
               android:src="@drawable/ic_video_library_black_24dp"
               android:layout_width="50dp"
               android:layout_height="50dp" />
    <TextView
        android:id="@+id/t1"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:text="Physics"
        android:textSize="50sp"
        android:textColor="#fd9a10"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:fontFamily="@string/app_name"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/t2"
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:text="5 Chapters | 33 Journeys"
        android:textSize="20sp"
        android:textColor="#aeaca6"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50dp" />


    <Button
        android:layout_below="@+id/t2"
        android:id="@+id/im2"
        android:outlineSpotShadowColor="#10c2fd"
        android:shadowColor="#10c2fd"
        android:paddingRight="20dp"
        android:fontFamily="@string/app_name"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_mood_black_24dp"
        android:text="  Hey Arya,\n  Start your learning journey"
        android:textAlignment="viewStart"
        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/gradient"/>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/im2"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />


        <TextView
            android:layout_below="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#0e0e0e"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Force and Pressure"
            android:textSize="20dp"/>

    <HorizontalScrollView
        android:layout_marginTop="50dp"
        android:id="@+id/h1"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="220dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="180dp"
                android:text="Intriduction"
                android:drawableTop="@drawable/fap"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius2"/>
            <Button
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:drawableTop="@drawable/car"
                android:paddingTop="24dp"
                android:text="Playing with Force"
                android:longClickable="true"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius2"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius2"
                android:drawableTop="@drawable/dip"
                android:paddingTop="30dp"
                android:text="What is easy ?" />

        </LinearLayout>
    </HorizontalScrollView>

        <TextView
            android:layout_below="@+id/h1"
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#151414"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Friction"
            android:textSize="20dp"/>

        <HorizontalScrollView
            android:layout_marginTop="5dp"
            android:id="@+id/h2"
            android:layout_below="@+id/v2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="220dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/images"
                    android:text="Introduction"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/radius2"/>
                <Button
                    android:layout_width="180dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/fih"
                    android:layout_marginTop="20dp"
                    android:text="Sliding"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/radius2"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_marginLeft="10dp"
                    android:drawableTop="@drawable/fir"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Force of Friction"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/radius2"/>

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>