<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
           <ImageButton
               android:id="@+id/b1"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_alignParentLeft="true"
               android:background="@drawable/radius"
               android:layout_width="50dp"
               android:src="@drawable/ic_arrow_back_black_24dp"
               android:layout_height="50dp" />
           <ImageButton
               android:layout_alignParentRight="true"
               android:layout_marginTop="10dp"
               android:background="@drawable/radius"
               android:layout_marginRight="20dp"
               android:src="@drawable/ic_video_library_black_24dp"
               android:layout_width="50dp"
               android:layout_height="50dp" />
    <TextView
        android:id="@+id/t1"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:text="Physics"
        android:textSize="50sp"
        android:textColor="#fd9a10"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:fontFamily="@string/app_name"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/t2"
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:text="5 Chapters | 33 Journeys"
        android:textSize="20sp"
        android:textColor="#fd9a10"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50dp" />


    <ImageButton
        android:layout_below="@+id/t2"
        android:id="@+id/im2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/radius"/>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/im2"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />


        <TextView
            android:layout_below="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#fd9a10"
            android:layout_marginHorizontal="20dp"
            android:text="Force and Pressure"
            android:textSize="20dp"/>

    <HorizontalScrollView
        android:layout_marginTop="30dp"
        android:id="@+id/h1"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="220dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>
            <ImageButton
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>

            <ImageButton
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>

        </LinearLayout>
    </HorizontalScrollView>

        <TextView
            android:layout_below="@+id/h1"
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#fd9a10"
            android:layout_marginHorizontal="20dp"
            android:text="Friction"
            android:textSize="20dp"/>
        <HorizontalScrollView
       android:layout_below="@+id/v2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>
            <ImageButton
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>

            <ImageButton
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radius"/>

        </LinearLayout>
    </HorizontalScrollView>


    </RelativeLayout>

</ScrollView>